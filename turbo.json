{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["tsconfig.json"],
  "tasks": {
    "clean": {
      "cache": false
    },
    "build": {
      "inputs": ["src/**"],
      "outputs": ["dist/**"],
      "dependsOn": ["^build"]
    },
    "build:docker": {
      "cache": false
    },
    "push:docker": {
      "cache": false
    },
    "solana-testcontainers#build": {
      "inputs": ["src/**"],
      "outputs": ["dist/**"],
      "dependsOn": ["solana-test-validator#build:docker", "^build"]
    },
    "lint": {
      "outputs": []
    }
  }
}
